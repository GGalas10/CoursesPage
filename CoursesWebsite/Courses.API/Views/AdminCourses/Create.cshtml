@using Courses.Infrastructure.Comands.Course
@model Create
<link rel="stylesheet" href="~/css/Course/Create.css" asp-append-version="true" />
<form id="CourseValidator" class="CreatePanel" enctype="multipart/form-data" method="post">
    <div id="FirstPanel" class="FirstPanel">
        <h1>Na początku uzupełnijmy podstawowe dane Twojego kursu</h1>
        <section>
            <label for="Title">Podaj nazwę kursu</label>
            <input asp-for="@Model.Title" type="text" maxlength="50" placeholder="Tytuł kursu" required/>
        </section>
        <section>
            <label for="Description">Poniżej opisz swój kurs</label>
            <textarea asp-for="@Model.Description" required></textarea>
        </section>
        <div class="NextBtn" onclick="FirstPanelDone()"><p>Dalej</p></div>
    </div>
    <div id="SecondPanel" class="SecondPanel">
        <h1>Teraz wybierz zdjęcie</h1>
        <section>
        <p>Jest to istotny element Twojego kursu ponieważ ładne zdjęcie zawsze przyciąga klientów.</p>
        <br />
        <label for="CoursePicture" class="ImgBtn">Wybierz zdjęcie</label>
        <input asp-for="@Model.CoursePicture" type="file" style="display:none" accept="image/png, image/jpeg" />
        <div id="PictureView" class="Pic"></div>
        </section>
        <section>
            <div class="NextBtn TwoBtnInSection" onclick="ReturnToFirstPanel('false')"><p>Wstecz</p></div>
            <div class="NextBtn TwoBtnInSection" onclick="SecondPanelDone()"><p>Dalej</p></div>
        </section>

    </div>
    <div id="LastPanel" class="LastPanel">
        <h1>To już ostatni krok tworzenia Twojego kursu</h1>
        <section>
            <label for="Price">Podaj cenę za swój kurs</label>
            <input asp-for="@Model.Price" type="number" min="0" onkeypress='return event.charCode == 46 || (event.charCode >= 48 && event.charCode <= 57)' required />
        </section>
        <section>
        <label for="AuthorName">Podaj Imię i Nazwisko autora kursu</label>
        <input type="text" asp-for="@Model.AuthorName"  required/>
        </section>
        <section style="max-height: 150px;">
            <div class="NextBtn TwoBtnInSection" onclick="ReturnToSecondPanel('false')"><p>Wstecz</p></div>
            <div class="NextBtn TwoBtnInSection" onclick="GoToSummary()"><p>Przejdź do podsumowania</p></div>
        </section>
    </div>
    <div id="Summary" class="Sumary">
        <h1>Podsumowanie tworzenia kursu</h1>
        <div class="SummarySection">
            <div class="FirstSumarySection">
                <h2>Podstawowe informacje</h2>
                <span>Tytuł:</span>
                <p id="SummaryTitle" name="SummaryTitle" class="SummaryTitle"></p>
                <span>Opis:</span>
                <p id="SummaryDescription" class="SummaryDescriptio" style="overflow: auto;max-height: 200px;"></p>                
            </div>
            <div class="SecondSection">
                <h2>Zdjęcie kursu</h2>
                <div id="SummaryPicture" style="height:60%;width:80%;margin:auto"></div>              
            </div>
            <div class="ThridSection">
                <h2>Cena i autor</h2>
                <label for="SummaryPrice">Cena:</label>
                <p id="SummaryPrice" name="SummaryPrice"></p>
                <label for="SummaryAuthor">Autor</label>
                <p id="SummaryAuthor" class="SummaryAuthor" name="SummaryAuthor"></p>                
            </div>
        </div>
        <div class="SummaryButtons">
            <div id="ReturnFirst" class="SummaryBtn" onclick="ReturnToFirstPanel('true')" style="width:15%"><p>Zmień</p></div>
            <div id="ReturnSecond" class="SummaryBtn" onclick="ReturnToSecondPanel('true')" style="width:55%"><p>Zmień</p></div>
            <div id="ReturnLast" class="SummaryBtn" onclick="ReturnToLastPanel()" style="width:15%"><p>Zmień</p></div>
            </div>
        <button class="CreateCourse" id="CreateCourse">Stwórz kurs</button>
    </div>
</form>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="/js/Course/Create.js"></script>