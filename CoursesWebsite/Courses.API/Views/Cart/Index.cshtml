@model IEnumerable<Courses.Infrastructure.DTO.CartCourseDTO>
@{
    if (Model.Count() > 0)
    {
        var i = 0;
        double priceCount = 0;
        <table>       
            <thead>
                <th>L.P</th>
                <th>Nazwa</th>
                <th>Cena</th>
            </thead>
            <tbody>
                @foreach(var Course in Model)
                {
                    i++;
                    priceCount += Course.Price;
                    <td>@i</td>
                    <td>@Course.Name</td>
                    <td>@Course.Price zł</td>
                }
            </tbody>
            <tfoot>
                <td></td>
                <td>Suma:</td>
                <td>@priceCount zł</td>
            </tfoot>
        </table>

    }
    else
    {
        <div class="InformationBox">
            <p style="font-size:1.3rem">Brak kursów w koszyku. Przejdź do Naszego sklepu i wybierz interesujący Cię kurs</p>
        </div>
    }
}
