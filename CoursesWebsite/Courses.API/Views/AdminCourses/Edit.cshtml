@using Courses.Infrastructure.DTO
@model CourseDetails;
<link rel="stylesheet" href="~/css/Course/Create.css" asp-append-version="true" />
<form asp-action="Edit" method="post" style="width:120%;font-size:1.1rem;" class="d-grid justify-content-center text-center GlassEfectSection MainDetailsSection">
    <h1>Edytuj swój kurs</h1>
    <label for="@Model.Title">Tytuł:</label>
    <input type="text" asp-for="@Model.Title" /> 
    <label for="@Model.Description">Opis:</label>
    <textarea asp-for="@Model.Description"></textarea>
    <label for="@Model.Author">Autor:</label>
    <input type="text" asp-for="@Model.Author" />
    <label for="@Model.Price">Cena:</label>
    <input type="number" asp-for="@Model.Price" />
    <button>Zapisz</button>
</form>